<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.jesusbadenas.kotlin_clean_compose_project.presentation.main.MainFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/navigate_to_userListFragment"
            app:destination="@id/userListFragment" />
    </fragment>

    <fragment
        android:id="@+id/userListFragment"
        android:name="com.jesusbadenas.kotlin_clean_compose_project.presentation.userlist.UserListFragment"
        android:label="@string/title_user_list">
        <action
            android:id="@+id/navigate_to_userDetailsFragment"
            app:destination="@id/userDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/userDetailsFragment"
        android:name="com.jesusbadenas.kotlin_clean_compose_project.presentation.userdetails.UserDetailsFragment"
        android:label="@string/title_user_details">
        <argument
            android:name="user_id"
            app:argType="integer" />
    </fragment>
</navigation>
